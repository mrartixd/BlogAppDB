<Window x:Class="Blog_App.LoginWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Blog_App"
        mc:Ignorable="d"
        Title="Enter Login and Password" Height="240" Width="360" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid>
        <TextBox x:Name="username" HorizontalAlignment="Left" Height="23" Margin="140,57,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="64,61,0,0" TextWrapping="Wrap" Text="Username:" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="64,98,0,0" TextWrapping="Wrap" Text="Password:" VerticalAlignment="Top"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="80,170,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
        <Button Content="Exit" HorizontalAlignment="Left" Margin="200,170,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <PasswordBox x:Name="password" HorizontalAlignment="Left" Margin="140,98,0,0" VerticalAlignment="Top" Width="120" Height="23"/>

    </Grid>
</Window>
